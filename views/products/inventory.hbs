{{#extends 'base'}}

{{#block 'content'}}
    {{#if success_messages}}
        <div class="alert alert-success">
            {{this.success_messages}}
        </div>
    {{/if}}

    {{#if error_messages}}
        <div class="alert alert-danger">
            {{this.error_messages}}
        </div>
    {{/if}}

    <h1>Here to view all the inventory</h1>
    <a class="btn btn-primary" href="/products/add">Add</a>
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            {{!-- start of Active Products --}}
            {{!-- Accordion Header --}}
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Active Products
                </button>
            </h2>
            {{!-- Accordion Body --}}
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Thumbnail</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                            <tr>
                                <td>
                                    <img src='{{thumbnail_url}}'/>
                                </td>
                                <td>{{product_name}}</td>
                                <td>{{product_description}}</td>
                                <td>{{product_price}}</td>
                                <td>
                                    <a href="/products/{{id}}/update" class="btn btn-sm btn-primary">Update</a>
                                    <a href="/products/{{id}}/delete" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{!-- end of Active Products --}}
            {{!-- Start of Inactive Products --}}

            
        </div>
    </div>
{{/block}}


{{/extends}}