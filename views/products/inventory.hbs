{{#extends 'base'}}

{{#block 'content'}}
{{#if success_messages}}
    <div class="alert alert-success">
        {{this.success_messages}}
    </div>
{{/if}}

{{#if error_messages}}
    <div class="alert alert-danger">
        {{this.error_messages}}
    </div>
{{/if}}

<h1>Here to view all the inventory</h1>
<a class="btn btn-primary" href="/products/add">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Vendor ID</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
            <tr>
                <td>{{id}}</td>
                <td>{{product_name}}</td>
                <td>{{product_description}}</td>
                <td>{{product_price}}</td>
                <td>{{vendor_id}}</td>
                <td>
                    <img src='{{image_url}}'/>
                </td>
                <td>
                    <a href="/products/{{id}}/update" class="btn btn-sm btn-primary">Update</a>
                    <a href="/products/{{id}}/delete" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>


{{/block}}


{{/extends}}