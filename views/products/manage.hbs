{{#extends 'base'}}

{{#block "css"}}
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.css' rel='stylesheet' />
{{/block}}



{{#block 'content'}}
    <h1>Vendor Management area</h1>
    <div id="calendar"></div>
{{/block}}


{{#block "script"}}
<script>
      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth', //listDay, listWeek, listMonth, listYear
            
            // for list view:  https://fullcalendar.io/docs/list-view
            // to modify events: https://fullcalendar.io/docs/event-object
            events: [
            {
                title: "Test",
                backgroundColor: 'red',
                start: '2021-11-25',
                end: '2021-11-26',
                borderColor: 'green',
                backgroundColor: 'red'
            }
            ],

        });
        calendar.render();
      });
</script>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.js'></script>
{{/block}}

{{/extends}}